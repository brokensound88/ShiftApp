{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "scripts/**/*"
  ],
  "files": ["hardhat.config.ts"],
  "exclude": ["node_modules", "dist"]
} 